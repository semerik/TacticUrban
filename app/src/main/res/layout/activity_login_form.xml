<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginForm">

    <ImageView
        android:id="@+id/loginForm_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo3"
        tools:srcCompat="@drawable/fondo3" />

    <TextView
        android:id="@+id/loginForm_loginContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/loginForm_loginContinue"
        android:textSize="26dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginForm_logo" />

    <TextView
        android:id="@+id/loginForm_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:hint="@string/loginForm_instructions"

        android:layout_marginTop="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginForm_loginContinue" />

    <View
        android:id="@+id/linea1"
        android:layout_width="0dp"
        android:layout_height="2.2dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="@+id/textO"
        app:layout_constraintBottom_toBottomOf="@+id/textO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textO"


        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        />

    <View
        android:id="@+id/linea2"
        android:layout_width="0dp"
        android:layout_height="2.2dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="@+id/textO"
        app:layout_constraintBottom_toBottomOf="@+id/textO"
        app:layout_constraintStart_toEndOf="@+id/textO"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"

        />


    <TextView
        android:id="@+id/textO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:textColor="#000000"
        android:textSize="24sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginForm_instructions"

        android:layout_margin="16dp"

        />

    <EditText
        android:id="@+id/loginForm_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/loginForm_userName"
        android:inputType="text"

        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="@+id/linea2"
        app:layout_constraintStart_toStartOf="@+id/linea1"
        app:layout_constraintTop_toBottomOf="@+id/textO" />

    <EditText
        android:id="@+id/loginForm_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:hint="@string/loginForm_password"
        android:layout_marginTop="8dp"

        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/linea2"
        app:layout_constraintStart_toStartOf="@+id/linea1"
        app:layout_constraintTop_toBottomOf="@+id/loginForm_userName" />

    <Button
        android:id="@+id/loginForm_singIn"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"

        android:backgroundTint="#04958D"
        android:text="@string/loginForm_singIn"
        android:textColor="#000"

        android:textSize="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/linea2"
        app:layout_constraintStart_toStartOf="@+id/linea1"
        app:layout_constraintTop_toBottomOf="@+id/loginForm_password"

        />

    <TextView
        android:id="@+id/loginForm_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/loginForm_register"

        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="@+id/linea2"
        app:layout_constraintStart_toStartOf="@+id/linea1"
        app:layout_constraintTop_toBottomOf="@+id/loginForm_singIn" />

    <ImageView
        android:id="@+id/loginForm_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />




</androidx.constraintlayout.widget.ConstraintLayout>